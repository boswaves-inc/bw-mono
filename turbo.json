{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "gen": {
            "outputs": []
        },
        "@boswaves-inc/smtp-proc#gen": {
            "inputs": [
                "scripts/gen_types.ts",
                "src/routes/**/*.ts"
            ],
            "outputs": [
                "../sdk/src/schema.ts"
            ]
        },
        "build": {
            "dependsOn": [
                "gen",
                "^build"
            ],
            "outputs": [
                "dist/**",
                ".next/**"
            ]
        },
        "dev": {
            "dependsOn": [
                "gen"
            ],
            "cache": false,
            "persistent": true
        },
        "test": {
            "dependsOn": [
                "build"
            ]
        },
        "db:gen": {
            "cache": false
        },
        "db:mig": {
            "cache": false
        }
    }
}