{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "generate": {
            "dependsOn": [
                "^generate"
            ],
            "outputs": [
                "src/generated/**"
            ]
        },
        "build": {
            "dependsOn": [
                "generate",
                "^build"
            ],
            "outputs": [
                "dist/**",
                ".next/**"
            ]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "test": {
            "dependsOn": [
                "build"
            ]
        },
        "db:generate": {
            "cache": false
        },
        "db:migrate": {
            "cache": false
        }
    }
}