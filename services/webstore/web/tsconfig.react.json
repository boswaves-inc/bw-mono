{
  "extends": "./tsconfig.json",
  "include": [
    ".react-router/types/**/*",
    "app/**/*",
    "app/**/.server/**/*",
    "app/**/.client/**/*",
    "server/**/*",
    "scripts/**/*"
  ],
  "references": [
    {
      "path": "../core/tsconfig.json"
    }
  ],
  "compilerOptions": {
    "composite": true,
    "strict": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "target": "ES2022",
    "module": "ES2022",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2022"
    ],
    "types": [
      "vite/client"
    ],
    "rootDirs": [
      ".",
      "./.react-router/types"
    ],
    "paths": {
      "~/*": [
        "./app/*"
      ],
    },
  }
}