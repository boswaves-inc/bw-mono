{
  "extends": "../tsconfig.react.json",
  "include": [
    ".react-router/types/**/*",
    "app/**/*",
    "app/**/.server/**/*",
    "app/**/.client/**/*",
    "server/**/*"
  ],
  "references": [
    {
      "path": "../core/tsconfig.json"
    }
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "types": [
      "vite/client"
    ],
    "rootDirs": [
      ".",
      "./.react-router/types"
    ],
    "paths": {
      "~/*": [
        "./app/*"
      ]
    },
  }
}