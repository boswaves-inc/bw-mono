{
    "extends": "./tsconfig.json",
    "references": [
        {
            "path": "./core/tsconfig.json"
        },
        {
            "path": "./web/tsconfig.react.json"
        },
        {
            "path": "./admin/tsconfig.react.json"
        },
    ],
    "compilerOptions": {
        "composite": true,
        "strict": true,
        "noEmit": false,
        "jsx": "react-jsx",
        "target": "ES2022",
        "module": "ES2022",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "bundler",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ES2022"
        ]
    }
}