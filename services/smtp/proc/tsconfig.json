{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "target": "ES2022",
    "jsx": "react-jsx",
    "module": "ESNext",
    "outDir": "dist",
    "rootDir": "./",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2022"
    ],
    "paths": {
      "~/*": [
        "./src/*"
      ],
      "~/schema/*": [
        "./src/schema/*"
      ],
      "~/emails/*": [
        "./src/emails/*"
      ],
      "~/components/*": [
        "./src/components/*"
      ],
    }
  },
  "include": [
    // "components/**/*",
    "tsup.config.ts",
    "src/**/*",
  ],
}