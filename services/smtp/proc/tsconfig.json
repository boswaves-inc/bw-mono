{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "strict": true,
    "jsx": "react-jsx",
    "composite": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "module": "ESNext",
    "outDir": "dist",
    "rootDir": "./",
    "paths": {
      "~/*": [
        "./src/*"
      ],
      "~/schema/*": [
        "./src/schema/*"
      ],
      "~/emails/*": [
        "./src/emails/*"
      ],
      "~/components/*": [
        "./src/components/*"
      ],
    }
  },
  "include": [
    // "components/**/*",
    "src/**/*",
  ],
}