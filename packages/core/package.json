{
    "name": "@bw/core",
    "private": true,
    "type": "module",
    "main": "./build/index.js",
    "types": "./build/index.d.ts",
    "exports": {
        ".": "./build/index.js",
        "./db": "./build/db/index.js",
        "./types": "./build/types/index.js"
    },
    "scripts": {
        "build": "tsc -p tsconfig.lib.json",
        "dev": "tsc -p tsconfig.lib.json --watch",
        "db:generate": "dotenv -- drizzle-kit generate",
        "db:migrate": "dotenv -- drizzle-kit migrate",
        "db:update": "dotenv -- drizzle-kit up"
    },
    "dependencies": {
        "chargebee": "^3.14.0",
        "compression": "^1.8.1",
        "drizzle-orm": "^0.44.6",
        "drizzle-zod": "^0.8.3",
        "postgres": "^3.4.7"
    },
    "devDependencies": {
        "@types/node": "^22.18.10",
        "dotenv-cli": "^10.0.0",
        "drizzle-kit": "^0.31.5",
        "tsx": "^4.20.6",
        "typescript": "^5.9.3"
    }
}