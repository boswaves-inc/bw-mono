{
  "include": [
    "drizzle.config.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "strict": true,
    "checkJs": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "noEmit": true,
    "rootDir": ".",
    "types": [
      "node"
    ],
    "lib": [
      "ES2022"
    ],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler"
  }
}