{
  "extends": "./tsconfig.json",
  "include": [
    ".react-router/types/**/*",
    "lib/**/*",
    "lib/**/.server/**/*",
    "lib/**/.client/**/*",
    "server/**/*",
  ],
  "compilerOptions": {
    "composite": true,
    "strict": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2022"
    ],
    "types": [
      "vite/client"
    ],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "rootDirs": [
      ".",
      "./.react-router/types"
    ],
    "paths": {
      "~/shared/*": [
        "./lib/shared/*"
      ],
      "~/public/*": [
        "./lib/public/*"
      ],
      "~/admin/*": [
        "./lib/admin/*"
      ]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}