{
    "name": "boswaves-inc",
    "private": true,
    "packageManager": "pnpm@9.0.0",
    "scripts": {
        "dev": "turbo dev",
        "test": "turbo test",
        "build": "turbo build",
        "clean": "rm -rf node_modules **/node_modules **/.turbo **/dist **/.next",
        "dev:smtp": "turbo dev --filter=@boswaves-inc/smtp-*...",
        "dev:store": "turbo dev --filter=@boswaves-inc/webstore-*...",
        "build:smtp": "turbo build --filter=@boswaves-inc/smtp-*...",
        "build:store": "turbo build --filter=@boswaves-inc/webstore-*...",
        "db:generate": "turbo db:generate",
        "db:migrate": "turbo db:migrate",
        "db:studio": "turbo db:studio",
        "infra:up": "cd infra && docker compose up -d",
        "infra:down": "cd infra && docker compose down",
        "infra:logs": "cd infra && docker compose logs -f"
    },
    "devDependencies": {
        "turbo": "^2.0.0",
        "dotenv-cli": "^10.0.0",
        "drizzle-kit": "^0.31.8",
        "typescript": "^5.4.0"
    }
}